<launch>
    <!-- HoloLens IP address -->
    <arg name="device" default="192.168.11.21"/>

    <!-- Launch the spatial input IMU node -->
    <node pkg="hl2ss_ros" type="si_to_odom_pub.py" name="si_to_odom_node" output="screen">
        <param name="host" value="$(arg device)" />
    </node>

</launch>